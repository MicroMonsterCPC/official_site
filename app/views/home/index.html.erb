<!-- スライドショー -->

<div class="slide">
  <div class="main-gallery">
    <img src="images/IMG_7645.jpg" height="667" width="1000" alt="" class="gallery-cell">
    <img src="images/IMG_7791.jpg" height="667" width="1000" alt="" class="gallery-cell">
    <img src="images/IMG_7797.jpg" height="667" width="1000" alt="" class="gallery-cell">
  </div>
</div>

<div class="body">
  <h1>while_loop</h1>
  <p>おっぱいをおっぱいする学園祭</p>
  <h1>現在のゲームごとスコアランキング一覧</h1>
  <% @games.each do |game| %>
    <%= image_tag game.banner_url.thumb.url %>
    <ol>
      <li><%= game.title %></li>
      <li><%= game.create_team %></li>
      <li><%= game.bio %></li>
    </ol>
  <% end %>
</div>

<script>
  $(function(){
    $('.main-gallery').flickity({
      initialIndex: 1,
      cellAlign: 'left',
      contain: true,
      wrapAround: true,
      imagesLoaded: true,
      draggable: true,
      prevNextButtons: true,
      pageDots: true,
      accessibility: true,
      autoPlay: 4000
    });
  });
</script>
