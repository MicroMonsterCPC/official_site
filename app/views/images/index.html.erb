<div class="body">
  <p id="notice"><%= notice %></p>

  <h1>Images</h1>

  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr style="margin: 30px;">
          <td><%= image_tag image.image, :width => '100%' %></td>
          <% if admin? %>
            <td><%= link_to 'Edit', edit_image_path(image) %></td>
            <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
