<%= form_tag('/login') do %>
  <div>
    <%= text_field_tag 'mail', nil, class: 'form-control loginbox-mail' %>
  </div>
  <br>
  <div>
    <%= password_field_tag 'password', nil, class: 'form-control loginbox-password' %>
  </div>
  <br>
  <%= submit_tag 'Login', class: 'btn btn-default' %>
<% end %>
