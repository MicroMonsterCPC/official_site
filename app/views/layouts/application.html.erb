<!DOCTYPE html>
<html>
  <head>
    <title>while_loop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="loader-bg">
      <div id="loader">
        <img src="http://i.imgur.com/I6QPAk2.gif" width="180" height="180" alt="Now Loading..." />
      </div>
    </div>
    <div id="wrap">
      <div id="top-bar" class="top-bar">
        <div class="container">
          <nav>
            <%= link_to "while_loop", :root, :class => 'title' %>

            <div class="visible-xs-block">
              <a class="menu-btn">三</a>
              <div class="drawr">
                <ul id="menu">
                  <li><%= link_to "HOME", :root %></li>
                  <li><%= link_to "IMAGES", :images %></li>
                  <li><%= link_to "ABOUT", :about %></li>
                  <li><%= link_to "SCHOOL", ENV["SCHOOL_URL"] %></li>
                </ul>
              </div>
            </div>

            <ul class="hidden-xs">
              <li><%= link_to "HOME", :root %></li>
              <li><%= link_to "IMAGES", :images %></li>
              <li><%= link_to "ABOUT", :about %></li>
              <li><%= link_to "SCHOOL", ENV["SCHOOL_URL"] %></li>
            </ul>

          </nav>
        </div>
      </div>
    </div>
    <main>
      <%= yield %>
    </main>
    <script>
      $(function() {
        WindowHeight = $(window).height();
        $('.drawr').css('height', WindowHeight); //メニューをWindowの高さいっぱいにする
        $(document).ready(function() {
          $('.menu-btn').click(function(){ //クリックしたら
            console.log("DONE")
            $('.drawr').animate({width:'toggle'}); //animateで表示・非表示
            $(this).toggleClass('peke'); //toggleでクラス追加・削除
          });
        });
      });
    </script>
  </body>
</html>
